pipeline {
        agent any

        stages {
            stage('Pull from GIT'){
                steps {
                    echo 'Pulling...'
                        git branch: 'MoezMahmoud-5Twin4-G7' ,
                        url : 'https://github.com/bahaeddinetlili/5TWIN4-G7-Projet2.git'
                }
            }

            stage('MVN clean & install') {
                steps{
                    sh 'mvn clean install';

                }

            }

             stage('MVN compile') {
                steps{
                    sh 'mvn compile';

                }

            }


            stage('SONARQUBE') {
                steps {
                    sh 'mvn sonar:sonar -Dsonar.login=admin -Dsonar.password=sonar -Dmaven.test.skip=true';
                }
            }

            stage('JUnit / Mockito') {
                steps {
                      sh 'mvn test'
                      junit '**/target/surefire-reports/TEST-*.xml'
                 }
             }

             stage('Nexus deploy') {
                steps {
                      sh 'mvn deploy -Dmaven.test.skip=true'
                 }
             }

            stage('Docker Build images') {
                steps {
                    script {
                        sh 'docker build -t moezmahmoud-5twin4-g7-devops:1.0.0 .'
                        sh 'docker pull mysql:5.7'


                    }
                }
            }
            stage('Push image Dockerhub') {
                steps {
                    script {
                        withCredentials([string(credentialsId: 'docker-pwd', variable: 'dockerpwd')]) {
                            sh 'docker login -u moiyse -p ${dockerpwd}'
                            sh 'docker push moiyse/moezmahmoud'


                        }
                    }
                }
            }
            stage('Docker Compose') {
                steps {
                    script {
                        sh 'docker compose up -d '
                    }
                }
            }



}
        }

